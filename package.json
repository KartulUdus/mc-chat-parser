    "dotenv": "^16.3.1",
    "rcon-client": "^4.2.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  }
}
